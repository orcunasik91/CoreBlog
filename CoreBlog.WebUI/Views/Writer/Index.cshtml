@model List<Blog>
@{
    Layout = "~/Views/Shared/_WriterPanelLayout.cshtml";
    ViewData["Title"] = "Yazar Dashboard";
}
<div class="page-header">
    <span><a class="btn btn-primary mx-3" asp-controller="Writer" asp-action="CreateBlog">Yeni Blog</a></span>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-area="" asp-controller="Writer" asp-action="Index">Bloglarım</a></li>
            <li class="breadcrumb-item active" aria-current="page">Blog Listem</li>
        </ol>
    </nav>
</div>
<div class="col-lg-12 stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Bloglarım</h4>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th> # </th>
                        <th> Başlık </th>
                        <th> İçerik </th>
                        <th> Kategori </th>
                        <th> Tarih </th>
                        <th> Düzenle </th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int count = 1;
                        foreach (Blog item in Model)
                        {
                            <tr class="table-info">
                                <td> @count </td>
                                <td> @item.BlogTitle </td>
                                <td> @item.BlogContent.Substring(0, 20)... </td>
                                <td> @item.Category.CategoryName </td>
                                <td> @item.CreatedDate.ToString("dd MMM, yyyy") </td>
                                <td> <a class="btn btn-warning text-dark" asp-area="" asp-controller="Writer" asp-action="GetMyBlog" asp-route-id="@item.BlogId">Düzenle</a> </td>
                            </tr>
                            count++;
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>