@model IEnumerable<Comment>
<div class="comment-top">
    @if (Model.Count() == 0)
    {
        <p class="lead">Daha önce yorum yapılmamış.</p>
    }
    else
    {
        <h4>Yorumlar</h4>
        @foreach (Comment comment in Model)
        {
            <div class="media">
                <img src="~/CoreBlogTheme/images/t1.jpg" alt="" class="img-fluid" />
                <div class="media-body">
                    <h5 class="mt-0">@comment.UserName</h5>
                    <p>
                        @comment.Content
                    </p>
                </div>
            </div>
        }
    }
</div>