@model List<Blog>
<div class="col-lg-4 footer-grid-agileits-w3ls text-left">
    <div class="tech-btm">
        <h3>Son Gönderiler</h3>
        @foreach (Blog blog in Model)
        {
            <div class="blog-grids row mb-3">
                <div class="col-md-5 blog-grid-left">
                    <a asp-area="" asp-controller="Blogs" asp-action="BlogRead" asp-route-id="@blog.BlogId" asp-route-writerId="@blog.WriterId">
                        <img src="@blog.BlogThumbnailImageUrl" class="img-fluid" alt="">
                    </a>
                </div>
                <div class="col-md-7 blog-grid-right">
                    <h5>
                        <a asp-area="" asp-controller="Blogs" asp-action="BlogRead" asp-route-id="@blog.BlogId" asp-route-writerId="@blog.WriterId">@blog.BlogTitle </a>
                    </h5>
                    <div class="sub-meta">
                        <span>
                            <i class="far fa-clock"></i> @blog.CreatedDate.ToString("dd MMM, yyyy")
                        </span>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
