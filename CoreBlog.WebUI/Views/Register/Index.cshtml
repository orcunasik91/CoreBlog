@model Writer
@{
    ViewData["Title"] = "Kayıt İşlemi";
}
<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Blog Üyelik Paneli</h3>
        <div class="inner-sec">
            <div class="login p-5 bg-light mx-auto mw-100">
                <form asp-controller="Register" asp-action="Index" method="post">
                    <div class="form-row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="WriterFullName">Adınız Soyadınız</label>
                            <input type="text" class="form-control" asp-for="WriterFullName" autofocus>
                            <span class="text-danger" asp-validation-for="WriterFullName"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="WriterEmail">Email</label>
                            <input type="email" class="form-control" asp-for="WriterEmail">
                            <span class="text-danger" asp-validation-for="WriterEmail"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label asp-for="WriterPassword">Şifre</label>
                            <input type="password" class="form-control" asp-for="WriterPassword">
                            <span class="text-danger" asp-validation-for="WriterPassword"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="WriterImageUrl">Profil Resmi</label>
                            <input type="text" class="form-control" asp-for="WriterImageUrl">
                        </div>

                    </div>
                    <button type="submit" class="btn btn-primary submit mb-4">Kayıt Ol</button>
                    <button type="button" id="btnTest" class="btn btn-primary submit mb-4 mx-2">Alert</button>
                </form>
            </div>
        </div>
    </div>
    @section Scripts{
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script>
            document.getElementById('btnTest').addEventListener("click",function () {
                Swal.fire(
                    'Good job!',
                    'You clicked the button!',
                    'success'
                );
            });
        </script>
    }
</section>